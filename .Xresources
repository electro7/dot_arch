! Rofi Settings
! ------------------------------------------------------------------------------
rofi.dpi:			  96
rofi.width:			  50
rofi.padding:		  10
rofi.fullscreen: 	  false
rofi.fixed-num-lines: true
rofi.bw:			  2
rofi.location:		  0
rofi.terminal:		  urxvt
rofi.lines:			  10
rofi.eh:			  1
rofi.hide-scrollbar:  true
rofi.separator-style: solid
rofi.font:      	  Inconsolata Nerd Font 12
