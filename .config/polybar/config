inherit = section/base
interface = ${variables.wlan}
interval = 1
accumulate-stats = false

label-connected = "%{T3}直%{T-} %{T3}%{T-} %downspeed:% %{T3}%{T-} %upspeed:%"
label-disconnected = "%{T3}%{F#1D1F21}直%{F- T-}"

;=====================================================
;   module/eth
;=====================================================
[module/eth]
